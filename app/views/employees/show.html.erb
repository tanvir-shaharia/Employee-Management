<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-7">
      <div class="card rounded-0 mt-5 mb-5">
        <div class="card-body px-4 py-5">
          <h2 class="text-center mb-4">Employee Details</h2>

          <div class="d-flex justify-content-between align-items-center border-bottom py-3 px-3 mb-2">
            <strong class="me-3">First Name</strong>
            <span><%= @employee.first_name %></span>
          </div>

          <div class="d-flex justify-content-between align-items-center border-bottom py-3 px-3 mb-2">
            <strong class="me-3">Last Name</strong>
            <span><%= @employee.last_name %></span>
          </div>

          <div class="d-flex justify-content-between align-items-center border-bottom py-3 px-3 mb-2">
            <strong class="me-3">Email</strong>
            <span><%= @employee.email %></span>
          </div>

          <div class="d-flex justify-content-between align-items-center border-bottom py-3 px-3 mb-2">
            <strong class="me-3">Phone</strong>
            <span><%= @employee.phone %></span>
          </div>

          <div class="d-flex justify-content-between align-items-center border-bottom py-3 px-3 mb-2">
            <strong class="me-3">Address</strong>
            <span><%= @employee.address %></span>
          </div>

          <div class="text-center mt-4">
            <%= link_to "Back to List", employees_path, class: "btn btn-secondary me-2" %>
            <%= link_to "Edit", edit_employee_path(@employee), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
