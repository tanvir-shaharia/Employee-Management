<div class="col-lg-6 mx-auto">
  <div class="card">
    <div class="card-header text-center">
      <h2>Sign in</h2>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="from-group">
          <%= f.label :email, class: "form-label mb-2 mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
        </div>

        <div class="from-group">
          <%= f.label :password, class: "form-label mb-2 mt-2" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-check mt-3">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, class: "form-check-label" %>
          </div>
        <% end %>
        <div class="from-group">
          <%= f.submit "Log in", class: "btn btn-primary mt-2 mb-2" %>
        </div>
      <% end %>
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
