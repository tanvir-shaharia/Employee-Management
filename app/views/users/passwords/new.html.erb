
<div class="col-lg-6 mx-auto">
  <div class="card">
    <div class="card-header text-center">
      <h2>Forgot your password?</h2>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="from-group">
          <%= f.label :email,class:"form-label mb-2 mb-2"%>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control form-control-lg" %>
        </div>

        <div class="from-group">
          <%= f.submit "Send me reset password instructions",class: "btn btn-primary mt-4 mb-2" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
