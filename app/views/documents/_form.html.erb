<%= form_with(model: document) do |form| %>
  <div class="row">
    <div class="col-lg-4">
      <div class="form-group">
        <%= form.label :name, class: "mb-2" %>
        <%= form.text_field :name, class: "form-control form-control-lg rounded-0" %>
        <% @document.errors.full_messages_for(:name).each do |message| %>
          <div class="text-danger mt-1"><%= message %></div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-4">
      <div class="form-group">
        <%= form.label :doc_type, class: "mb-2" %>
        <%= form.text_field :doc_type, class: "form-control form-control-lg rounded-0" %>
        <% @document.errors.full_messages_for(:doc_type).each do |message| %>
          <div class="text-danger mt-1"><%= message %></div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-4">
      <div class="form-group">
        <%= form.label :employee_id, class: "mb-2" %>
        <%= form.text_field :employee_id, class: "form-control form-control-lg rounded-0" %>
        <% @document.errors.full_messages_for(:employee_id).each do |message| %>
          <div class="text-danger mt-1"><%= message %></div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12 mt-4 bt-5 rounded-0">
      <%= form.submit class: "btn btn-primary rounded-0 " %>
      <%= link_to "Back to Documents", documents_path, class: "btn btn-outline-warning rounded-0" %>
    </div>
  </div>
<% end %>